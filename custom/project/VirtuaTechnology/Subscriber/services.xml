<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="VirtuaTechnology\Services\TechnologyService" id="virtua_technology_services.technology_service">
            <argument id="dbal_connection" type="service"/>
            <argument id="service_container" type="service"/>
            <argument id="shopware_storefront.list_product_service" type="service"/>
        </service>

        <service class="VirtuaTechnology\Subscriber\Frontend" id="virtua_technology.subscriber.frontend">
            <argument id="virtua_technology_services.technology_service" type="service"/>
            <tag name="shopware.event_subscriber"/>
        </service>


    </services>
</container>
