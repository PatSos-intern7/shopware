<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="VirtuaTechnology\Services\TechnologyService" id="virtua_technology_services.technology_service">
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="VirtuaTechnology\Services\TechnologyPaginator" id="virtua_technology.services.technology_paginator">
            <argument id="router" type="service"/>
        </service>

        <service class="VirtuaTechnology\Subscriber\TechnologySubscriber" id="virtua_technology.subscriber.technology_subscriber">
            <argument id="template" type="service"/>
            <tag name="shopware.event_subscriber"/>
        </service>

    </services>
</container>
